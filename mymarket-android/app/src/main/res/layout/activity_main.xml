<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fitsSystemWindows="false"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/toolbarSpace"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:background="?attr/colorPrimaryDark" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:title="@string/title_activity_main" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.mymarket.app.activity.MainActivity">

        <Spinner
            android:id="@+id/placesSpinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/imageButton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/imageButton"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:minHeight="@dimen/abc_edit_text_inset_top_material"
            android:spinnerMode="dropdown" />

        <Spinner
            android:id="@+id/marketsSpinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/imageButton"
            android:layout_alignRight="@+id/imageButton"
            android:layout_below="@+id/placesSpinner"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:clickable="false"
            android:minHeight="@dimen/abc_edit_text_inset_top_material"
            android:spinnerMode="dropdown" />

        <Button
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="67dp"
            android:drawableLeft="@drawable/barcodee"
            android:src="@drawable/barcodee" />

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/reloadMarketsButton"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@color/blue_400"
            android:onClick="suggestMarket"
            android:text="@string/suggest_market_activity_main" />

        <!--        <Button
                    android:id="@+id/reloadPlacesButton"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/placesSpinner"
                    android:layout_alignBottom="@+id/placesSpinner"
                    android:layout_toEndOf="@+id/placesSpinner"
                    android:layout_toRightOf="@+id/placesSpinner"
                    android:background="@color/green_400"
                    android:drawableTop="@drawable/reloadbutton"/>-->

        <!--        <Button
                    android:id="@+id/reloadMarketsButton"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/marketsSpinner"
                    android:layout_alignBottom="@+id/marketsSpinner"
                    android:layout_below="@+id/reloadPlacesButton"
                    android:layout_toEndOf="@+id/marketsSpinner"
                    android:layout_toRightOf="@+id/marketsSpinner"
                    android:background="@color/green_400"
                    android:drawableTop="@drawable/reloadbutton" />-->


        <at.markushi.ui.CircleButton
            android:id="@+id/reloadPlacesButton"
            android:layout_width="64dip"
            android:layout_height="64dip"
            android:layout_alignTop="@+id/placesSpinner"
            android:layout_toEndOf="@+id/placesSpinner"
            android:layout_toRightOf="@+id/placesSpinner"
            android:src="@drawable/reloadbuttonblue"
            app:cb_color="@color/grey_500"
            app:cb_pressedRingWidth="8dip" />

        <at.markushi.ui.CircleButton
            android:id="@+id/reloadMarketsButton"
            android:layout_width="64dip"
            android:layout_height="64dip"
            android:layout_alignTop="@+id/marketsSpinner"
            android:layout_below="@+id/reloadPlacesButton"
            android:layout_toEndOf="@+id/marketsSpinner"
            android:layout_toRightOf="@+id/marketsSpinner"
            android:src="@drawable/reloadbuttonblue"
            app:cb_color="@color/grey_500"
            app:cb_pressedRingWidth="8dip" />

        <!--    <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/cart_activity_main"
                android:id="@+id/button2"
                android:layout_below="@+id/button1"
                android:onClick="list"/>-->
    </RelativeLayout>
</LinearLayout>